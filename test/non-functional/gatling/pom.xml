  <modelVersion>4.0.0</modelVersion>

  <groupId>se.skltp.aggregatingservices.riv.clinicalprocess.logistics.logistics</groupId>
  <artifactId>performance</artifactId>
  <version>1.0.0-RC2-SNAPSHOT</version>

  <properties>
    <gatling.version>2.1.4</gatling.version>
    <gatling-maven-plugin.version>2.1.2</gatling-maven-plugin.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.gatling.highcharts</groupId>
      <artifactId>gatling-charts-highcharts</artifactId>
      <version>${gatling.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>io.gatling</groupId>
        <artifactId>gatling-maven-plugin</artifactId>
        <version>${gatling-maven-plugin.version}</version>
        <configuration>
          <simulationClass>${simulationClass}</simulationClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>WarmUp</id>
      <properties>
        <simulationClass>se.skltp.aggregatingservices.riv.clinicalprocess.logistics.logistics.getaggregatedcareplans.TP00WarmUp</simulationClass>
      </properties>
    </profile>

    <profile>
      <id>PingForConfiguration</id>
      <properties>
        <simulationClass>se.skltp.aggregatingservices.riv.clinicalprocess.logistics.logistics.getaggregatedcareplans.TP01PingForConfiguration</simulationClass>
      </properties>
    </profile>

    <profile>
      <id>Smoke</id>
      <properties>
        <simulationClass>se.skltp.aggregatingservices.riv.clinicalprocess.logistics.logistics.getaggregatedcareplans.TP02Smoke</simulationClass>
      </properties>
    </profile>

    <profile>
      <id>Load</id>
      <properties>
        <simulationClass>se.skltp.aggregatingservices.riv.clinicalprocess.logistics.logistics.getaggregatedcareplans.TP03Load</simulationClass>
      </properties>
    </profile>

    <profile>
      <id>Robustness</id>
      <properties>
        <simulationClass>se.skltp.aggregatingservices.riv.clinicalprocess.logistics.logistics.getaggregatedcareplans.TP04Robustness</simulationClass>
      </properties>
    </profile>
  </profiles>
